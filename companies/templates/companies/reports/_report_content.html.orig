              <table class="transformed-bar-chart">
                {% for td in transformed_datas %}
                <tr>
                  <td class="transformed-name" style="background-color:{{ td.color }};">{{ td.name }}</td><td>
                    <div class="transformed-bar" style="width:{{ td.percent_in_total }}%;background-color:{{ td.color }}"></div>
                  </td>
                </tr>
                {% endfor %}
              </table>
        </div>
