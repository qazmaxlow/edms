                  <p>{% trans "compare to same period year" %}</p>
                </div>
              </div>
        </div>
        <div class="col-xs-8 calendar-content">
          <div class="row text-center report-date"><div class="col-xs-12">{{ report_date|date:"M Y" }}</div></div>
          <div class="row text-center">
