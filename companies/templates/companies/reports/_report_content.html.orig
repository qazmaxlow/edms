<div class="page-break-after">
<div id="report_compared_to_last" class="xreport-component page-break-after">
    <div class="row report-component-header">
      <div class="col-xs-12">
      {% trans 'HOW MUCH MORE / LESS DID WE USE COMPARED TO LAST <span class="report-type-name"></span>?' %}
      </div>
    </div>

    <div class="row top-content">
      <div class="col-xs-12 text-center">
        <h4>
        {% trans "Your energy consumption this  was" %}{% ifequal LANGUAGE_CODE 'zh-tw' %}{% if compare_to_last_month > 0 %}{% trans "more" %}{% else %}{% trans "less" %}{% endif %} {{ compare_to_last_month_abs|floatformat:0 }}%
       	{% else %}
       	{{ compare_to_last_month_abs|floatformat:0 }}% {% if compare_to_last_month > 0 %}{% trans "more" %}{% else %}{% trans "less" %}{% endif %}{% trans " than it was last." %} 
       	{% endifequal %}
        </h4>
        <div kendo-chart k-options="barOptions" ></div>
        <div class="asterisk-text single-asterisk-text">{% trans "* Data not available or incomplete for this period" %}</div>
      </div>
    </div>

    <div class="row detail-content">
      <div class="col-xs-12">
        <div kendo-chart k-options="lineOptions" ></div>
      </div>

    </div>
    <div class="row">
      {% for subgraph in sub_compare_graphs %}
      <div class="col-xs-6">
        <div class="row">
          <div class="col-xs-12 sub-graph-title" style="background-color: {{ subgraph.color }}">
            {{ subgraph.title }}
          </div>
        </div>
        <div class="row detail-content">
          <div class="col-xs-12">
          <div kendo-chart k-options="subLineOptions"
               k-title="{text: '{{ subgraph.chart_title }}' }"

               k-series="[
            {
                data: cgDatas[{{ forloop.counter }}].last,
                name: '{{ compare_last_name }}',
                color: '#edba3c'
            },
            {
                data: cgDatas[{{ forloop.counter }}].current,
                name: '{{ compare_current_name }}',
                color: '#047fa1'
            }
        ]" ></div></div>

        </div>
      </div>
      {% if forloop.counter|divisibleby:3 %}
        </div><div class="row">
      {% endif %}

      {% endfor %}

    </div>
</div>
</div>

<div id="weekday-info" class="page-break-after">
    <div class="row report-component-header">
      <div class="col-xs-12">
        {% trans "HOW MUCH ENERGY DID WE USE ON <span>WEEKDAYS?</span>" %}</div>
    </div>

      {% if report_type != 'quarter' and report_type != 'year' and report_type != 'custom' %}
        <div class="row top-section">
        <div class="col-xs-4 side-bar">
          <div class="row item">
                <div class="col-xs-4">
                  <img src="{% static 'images/reports/icon_money.svg' %}">
                </div>
                <div class="col-xs-8">
                  <h3 class="used-money">${{ weekday_bill|stringformat:"d" }}</h3>
                  <p>{% trans "Average Weekday Energy Use" %}</p>
                </div>
          </div>
          <div class="row item">
                <div class="col-xs-4">
                  <img src="{% static weekday_month_compare_helper.change_icon_path  %}">
                </div>
                <div class="col-xs-8">
                  <h3 class="{{ weekday_month_compare_helper.change_css_class }}">
         	        {% ifequal LANGUAGE_CODE 'zh-tw' %}
         	          {{ weekday_month_compare_helper.change_desc_wording }}
         	          {{ weekday_month_compare_helper.compared_percent_abs|floatformat:0 }}%
         	        {% else %}
                      {{ weekday_month_compare_helper.compared_percent_abs|floatformat:0 }}%
                      {{ weekday_month_compare_helper.change_desc_wording }}
         	        {% endifequal %}
                  </h3>
                  <p>{% trans "Compare to Last Month" %}</p>
                </div>
          </div>
          <div class="row item end">
